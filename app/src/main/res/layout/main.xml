<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:padding="16dp"
			android:gravity="center">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Team A"
				android:layout_margin="16dp"
				android:textSize="14sp"
				android:textColor="#616161"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:textSize="56sp"
				android:id="@+id/mainTextViewA"
				android:textColor="#000000"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="+3 points"
				android:layout_marginTop="16dp"
				android:id="@+id/mainButton3PointsA"
				android:onClick="addThreeA"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="+2 points"
				android:layout_marginTop="16dp"
				android:id="@+id/mainButton2PointsA"
				android:onClick="addTwoA"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="free throw"
				android:layout_marginTop="16dp"
				android:id="@+id/mainButton1PointA"
				android:onClick="addOneA"/>

		</LinearLayout>

		<View
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:background="#BBBBBB"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:padding="16dp"
			android:gravity="center">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Team B"
				android:layout_margin="16dp"
				android:textSize="14sp"
				android:textColor="#616161"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:textSize="56sp"
				android:id="@+id/mainTextViewB"
				android:textColor="#000000"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="+3 points"
				android:layout_marginTop="16dp"
				android:id="@+id/mainButton3PointsB"
				android:onClick="addThreeB"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="+2 points"
				android:layout_marginTop="16dp"
				android:onClick="addTwoB"
				android:id="@+id/mainButton2PointsB"/>

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="free throw"
				android:layout_marginTop="16dp"
				android:onClick="addOneB"
				android:id="@+id/mainButton1PointB"/>

		</LinearLayout>

	</LinearLayout>

	<Button
		android:text="Reset"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerInParent="true"
		android:layout_margin="16dp"
		android:id="@+id/mainButtonReset"
		android:onClick="resetScores"/>

</RelativeLayout>

